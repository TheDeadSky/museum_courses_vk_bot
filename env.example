# VK Bot Configuration
VK_BOT_HOST=0.0.0.0
VK_BOT_PORT=9000
VK_DEBUG=false
# optional
# VK_SECRET_KEY=
# optional
# VK_CONFIRMATION_CODE=

# Webhook Configuration (required for webhook mode)
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PATH=/webhook
WEBAPP_HOST=0.0.0.0
